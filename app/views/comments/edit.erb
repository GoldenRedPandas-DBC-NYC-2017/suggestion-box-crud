<h1>Edit Suggestion</h1>
<form id="edit-comment" method="POST" action="/comments/<%= @comment.id %>">
  <input type="hidden" name="_method" value="put">

  <input class="text" type="text" name="comment[user_id]" value="<%= @comment.user_id %>">
  <input class="text" type="text" name="comment[body]" value="<%= @comment.body %>">
  <input type="submit" value="Edit Comment">
</form>
