<style>
  form { display: inline; }
</style>

<h1>Suggestion</h1>

<div class="suggestion_details">
  <h3><%= @suggestion.title %></h3>
  <%= @suggestion.description %><br>
  <% if @suggestion.user == current_user %>
  	<a href="/suggestions/<%= @suggestion.id %>/edit">Edit</a>
    <%= erb :"suggestions/_delete", layout: false, locals: {suggestion: @suggestion} %>
  <% end %>
</div>